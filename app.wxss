/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.chart-container {
  flex: 0 1 auto;
  width:100%;
}

.container .chart-container + .chart-container {
   margin: 100rpx 0 0;
}
.container .chart-container .canvas {
    width: 100%;
    height: 350px;
    padding: 20rpx 0;
}

.container .chart-container .change-button {
    width: 90%;
    margin: 20rpx auto;
}

.container .example-title {
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size:20px;
  text-decoration: underline;
}